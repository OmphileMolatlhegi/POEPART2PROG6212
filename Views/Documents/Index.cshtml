@model List<ContractMonthlyClaimSystem.Models.Document>
@{
    ViewData["Title"] = "Documents";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Documents</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Upload", "Documents")" class="btn btn-primary">
            <i class="fas fa-upload me-2"></i> Upload Documents
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Uploaded Documents</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Uploaded</th>
                            <th>Uploaded By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var document in Model)
                        {
                            <tr>
                                <td>
                                    
                                    @document.OriginalFileName
                                </td>
                               
                                <td>@((document.FileSize / 1024 / 1024).ToString("0.00")) MB</td>
                                <td>@document.UploadedDate.ToString("dd MMM yyyy")</td>
                                <td>@document.UploadedBy</td>
                                <td>
                                    <a href="@Url.Action("Download", "Documents", new { id = document.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a href="@Url.Action("View", "Documents", new { id = document.Id })" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form method="post" action="@Url.Action("Delete", "Documents")" style="display: inline;">
                                        <input type="hidden" name="id" value="@document.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this document?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No documents found. <a href="@Url.Action("Upload", "Documents")">Upload your first document</a>.
            </div>
        }
    </div>
</div>

@functions {
  

    
}