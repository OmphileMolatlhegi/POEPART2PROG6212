@model List<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">My Claims</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Create", "Claims")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i> New Claim
        </a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="btn-group" role="group">
            <a href="@Url.Action("MyClaims", "Claims")" class="btn btn-outline-secondary">All</a>
            <a href="@Url.Action("MyClaims", "Claims", new { status = "Draft" })" class="btn btn-outline-secondary">Drafts</a>
            <a href="@Url.Action("MyClaims", "Claims", new { status = "Submitted" })" class="btn btn-outline-primary">Pending</a>
            <a href="@Url.Action("MyClaims", "Claims", new { status = "Approved" })" class="btn btn-outline-success">Approved</a>
            <a href="@Url.Action("MyClaims", "Claims", new { status = "Rejected" })" class="btn btn-outline-danger">Rejected</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Submitted</th>
                            <th>Month</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.Id</td>
                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                <td>@DateTime.Parse(claim.ClaimMonth + "-01").ToString("MMM yyyy")</td>
                                <td>@claim.HoursWorked</td>
                                <td>R@(claim.TotalAmount.ToString("N2"))</td>
                                <td>
                                    <span class="status-badge status-@claim.Status.ToString().ToLower()">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Claims", new { id = claim.Id })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (claim.Status == ContractMonthlyClaimSystem.Models.ClaimStatus.Draft)
                                    {
                                        <a href="@Url.Action("Edit", "Claims", new { id = claim.Id })" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="@Url.Action("SubmitDraft", "Claims")" style="display: inline;">
                                            <input type="hidden" name="id" value="@claim.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Are you sure you want to submit this claim?')">
                                                <i class="fas fa-paper-plane"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No claims found. <a href="@Url.Action("Create", "Claims")">Submit your first claim</a>.
            </div>
        }
    </div>
</div>